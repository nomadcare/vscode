{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"jsx": "react-jsx",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vscode", "node"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules", ".vscode-test"]
}
